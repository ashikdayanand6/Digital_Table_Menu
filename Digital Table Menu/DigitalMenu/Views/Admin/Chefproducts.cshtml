
@{
    ViewBag.Title = "Chefproducts";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<style>
    .sam {
        margin: 20px;
    }
</style>

<br /><br /><br />

<div class="sam">
    <h2>Chef products List</h2>
    <hr />
    <table class="table table-striped" id="exmTab">
        <thead>
            <tr>
                <th>Chef</th>
                <th>Products</th>
                <th>Posted Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if(ViewBag.Res!=null)
            {
                foreach(var item in ViewBag.Res)
                {
                    <tr>
                        <td>@item.tblChef.Name</td>
                        <td>@item.Products</td>
                        <td>@item.PstDate</td>
                        <td>@item.Stataus</td>
                        <td><a href="@Url.Action("FinishProd", new { id=item.ChPdId})" class="btn btn-primary btn-sm">Finished</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<link href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" rel="Stylesheet" />
@section scripts{
    <script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            $("#exmTab").DataTable({lengthMenu:[[3,5,10,-1],[3,5,10,"all"]]});
        });
    </script>
    <script>
        $(function () {
            var suces = '@TempData["InsertFood"]'
            var update = '@TempData["UpdateFood"]'
            var delte = '@TempData["DeleteFood"]'

            if (suces != '')
                toastr.success(suces);
            else
                if (update != '')
                    toastr.info(update);
                else
                    if (delte != '')
                        toastr.info(delte);
        });
    </script>
}





